<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0D0D"
    android:onClick="cmd_Leer"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/txtId"
        android:layout_width="236dp"
        android:layout_height="36dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="text"
        android:text="Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/lblTitulo" />

    <EditText
        android:id="@+id/txtNombre"
        android:layout_width="236dp"
        android:layout_height="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="text"
        android:text="Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/txtId" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="124dp"
        android:text="Id"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="40dp"
        android:text="Nombre"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="40dp"
        android:text="Apellido"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="40dp"
        android:text="Iso Pais"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/txtIsoPais"
        android:layout_width="236dp"
        android:layout_height="36dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="text"
        android:text="Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/txtApellido" />

    <EditText
        android:id="@+id/txtEdad"
        android:layout_width="236dp"
        android:layout_height="36dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="text"
        android:text="Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/txtIsoPais" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="40dp"
        android:text="Edad"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="92dp"
        android:text="Libros del Autor"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/txtApellido"
        android:layout_width="236dp"
        android:layout_height="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="text"
        android:text="Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/txtNombre" />

    <TextView
        android:id="@+id/lblTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginTop="72dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cmd_Delete"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="24dp"
        android:background="#00FFFFFF"
        android:onClick="cmd_Delete"
        android:textAlignment="gravity"
        android:textAllCaps="false"
        android:textIsSelectable="false"
        android:textSize="0sp"
        app:icon="@android:drawable/ic_menu_delete"
        app:iconGravity="textTop"
        app:iconPadding="0dp"
        app:iconSize="40dp"
        app:iconTint="#E91E63"
        app:iconTintMode="src_in"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cmd_Leer" />

    <Button
        android:id="@+id/cmd_Crear"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="24dp"
        android:background="#00FFFFFF"
        android:onClick="cmdCrear_onClick"
        android:textAlignment="gravity"
        android:textAllCaps="false"
        android:textIsSelectable="false"
        android:textSize="0sp"
        app:icon="@android:drawable/stat_notify_more"
        app:iconGravity="textTop"
        app:iconPadding="0dp"
        app:iconSize="40dp"
        app:iconTint="#A91548"
        app:iconTintMode="multiply"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/cmd_Actualizar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="24dp"
        android:background="#00FFFFFF"
        android:onClick="cmdUpdate_onClick"
        android:textAlignment="gravity"
        android:textAllCaps="false"
        android:textIsSelectable="false"
        android:textSize="0sp"
        app:icon="@android:drawable/ic_menu_edit"
        app:iconGravity="textTop"
        app:iconPadding="0dp"
        app:iconSize="40dp"
        app:iconTint="#E91E63"
        app:iconTintMode="multiply"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cmd_Crear" />

    <Button
        android:id="@+id/cmd_Leer"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="24dp"
        android:background="#00FFFFFF"
        android:onClick="cmd_Leer"
        android:textAlignment="gravity"
        android:textAllCaps="false"
        android:textIsSelectable="false"
        android:textSize="0sp"
        app:icon="@android:drawable/ic_menu_search"
        app:iconGravity="textTop"
        app:iconPadding="0dp"
        app:iconSize="40dp"
        app:iconTint="#E91E63"
        app:iconTintMode="src_in"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cmd_Actualizar" />

    <Button
        android:id="@+id/btnRegresar"
        android:layout_width="133dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="#00FFFFFF"
        android:onClick="btnRegresar_onClick"
        android:paddingLeft="12dp"
        android:text="Regresar"
        android:textColor="#E91E63"
        android:textColorLink="#00FFFFFF"
        app:icon="?attr/homeAsUpIndicator"
        app:iconPadding="1dp"
        app:iconTint="#E91E63"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_Libros"
        android:layout_width="112dp"
        android:layout_height="58dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="404dp"
        android:background="#00FFFFFF"
        android:onClick="btn_libros_onClick"
        android:paddingLeft="12dp"
        android:text="Añadir Libros"
        android:textColor="#E91E63"
        android:textColorLink="#00FFFFFF"
        app:icon="@android:drawable/ic_input_get"
        app:iconPadding="1dp"
        app:iconTint="#E91E63"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="407dp"
        android:layout_height="120dp"
        android:layout_marginTop="52dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Libros">

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>